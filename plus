import sys

values = []

for etc in sys.stdin:
    try:
        values.append(float(etc))
    except:
        pass

if len(values) == 0:
    print("no numeric input", file=sys.stderr)
    sys.exit(1)

total = sum(values)
count = len(values)
avg = total / count
minimum = min(values)
maximum = max(values)

# 3桁区切り・整数は小数なし、float は小数あり
def format_number(x):
    if x == int(x):
        return "{:,}".format(int(x))
    else:
        return "{:,}".format(x)

print(f"count: {format_number(count)}")
print(f"sum: {format_number(total)}")
print(f"average: {format_number(avg)}")
print(f"min: {format_number(minimum)}")
print(f"max: {format_number(maximum)}")

